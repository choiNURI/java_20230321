package day08;

public class MethodOverloadingEx01 {

	public static void main(String[] args) {
		/*
		 * calc 메서드만들기
		 * calc (1,2,"+")
		 * calc (1,"+",2)
		 * calc ("+",1,2)
		 * 메서드 오버로딩을 이용하여 두 정수와 연산자를 입력받아 연산자의 위치에 상관없ㅇ디
		 * 연산의 결과가 출력되는 calc 메서드를 완성
		 * 잘못된 연산자가 들어오면 잘못된 연산자입니다. 출력*/
		
		
		calc(3, 4, "=");
		calc("*", 2, 3);
		calc(3, "*", 6);
		
		
	}
	
	
	public static int calc(int num1, int num2, String cr) {
		int sum=0;
		if(cr == "+") {
			System.out.println(sum=num1+num2); 
		}
		else if(cr == "-") {
			System.out.println(sum=num1-num2); 
		}
		else if(cr == "/") {
			System.out.println(sum=num1/num2); 
		}
		else if(cr == "*") {
			System.out.println(sum=num1*num2); 	
		}
		else {
			System.out.println("연산자오류");
		}
		return sum;
	}
	
	
	
	
	
	public static int calc(int num1, String cr, int num2) {
		int sum=0;
		if(cr == "+") {
			System.out.println(sum=num1+num2); 
		}
		else if(cr == "-") {
			System.out.println(sum=num1-num2); 
		}
		else if(cr == "/") {
			System.out.println(sum=num1/num2); 
		}
		else if(cr == "*") {
			System.out.println(sum=num1*num2); 	
		}
		else {
			System.out.println("연산자오류");
		}
		return sum;
		
		
	}
	
	public static int calc(String cr, int num1,  int num2) {
		int sum=0;
		if(cr == "+") {
			System.out.println(sum=num1+num2); 
		}
		else if(cr == "-") {
			System.out.println(sum=num1-num2); 
		}
		else if(cr == "/") {
			System.out.println(sum=num1/num2); 
		}
		else if(cr == "*") {
			System.out.println(sum=num1*num2); 	
		}
		else {
			System.out.println("연산자오류");
		}
		return sum;
	}
	
	

}
